<div class="row">
  <div class="col-md-12">
    <%= form_for(@contato, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :nome %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :nome, class: "form-control", placeholder: "Nome", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :email %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :email, class: "form-control", placeholder: "E-mail" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :telefone %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :telefone, class: "form-control telefone", placeholder:"(XX) XXXXX-XXXX" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :endereco %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :endereco, class: "form-control", placeholder: "EndereÃ§o" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit texto_botao, class: "btn btn-primary" %>
          [ <%= link_to texto_cancelar, contatos_path %> ]
        </div>
      </div>

      <% if @contato.errors.any? %>
        <div class="col-md-offset-2" id="error_explanation">
          <h3>Erros:</h3>
          <ul>
            <% @contato.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    <% end %>

  </div>
</div>
